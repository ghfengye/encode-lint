  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "markdownlint": "^0.33.0",
    "markdownlint-cli": "^0.39.0",
    "rimraf": "^5.0.5"
  },
  "scripts": {
